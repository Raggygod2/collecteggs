local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

local function teleportEgg(egg)
    if egg and egg:IsA("Part") then
        egg.CFrame = character.HumanoidRootPart.CFrame
    end
end

local function processEggs()
    for _, model in pairs(game.Workspace.Eggs.Eggs:GetChildren()) do
        if model.Name == "ClassicEgg" then
            local egg = model:FindFirstChild("Egg")
            if egg then
                teleportEgg(egg)
            end
        end
    end
end

game.Workspace.Eggs.Eggs.ChildAdded:Connect(function(model)
    if model.Name == "ClassicEgg" then
        model.ChildAdded:Connect(function(egg)
            if egg.Name == "Egg" then
                teleportEgg(egg)
            end
        end)
    end
end)

processEggs()

while true do
    wait(0.1)
    character = player.Character or player.CharacterAdded:Wait()
end
